{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/forge/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/forge/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/forge",
  "projects": {
    "forge": {
      "type": "application",
      "root": "apps/forge",
      "entryFile": "main",
      "sourceRoot": "apps/forge/src",
      "compilerOptions": {
        "tsConfigPath": "apps/forge/tsconfig.app.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    }
  }
}